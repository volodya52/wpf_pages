<Window x:Class="WPF_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_2"
        mc:Ignorable="d"
        Background="{DynamicResource Background}"
        Title="MainWindow" Height="730" Width="970">
    <DockPanel>
        <Menu Style="{DynamicResource MenuBackground}">
            <MenuItem Header="Настройки">
                <MenuItem Header="Сменить тему" Click="ChangeThemeMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
       
</Window>
