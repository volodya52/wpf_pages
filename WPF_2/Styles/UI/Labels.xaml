<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="InfoLabel" TargetType="Label">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="PeoplesCount" TargetType="Label">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="NameLabel" TargetType="Label">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="LabelID" TargetType="Label">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="LabelPassword" TargetType="Label">
        <Setter Property="Margin" Value="10,0,10,10"/>
    </Style>

    <Style x:Key="PacientsLabels" TargetType="Label">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="0,0,0,22"/>
    </Style>

</ResourceDictionary>