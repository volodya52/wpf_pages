<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PreviousAppointmentTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="Count" TargetType="TextBlock">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5,2"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ListPacient" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="Errors2" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="NameTextBlock" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5,2"/>
        <Setter Property="Margin" Value="5,0"/>
    </Style>

    <Style x:Key="SurnameTextBlock" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"></Style>
    <Style x:Key="LastNameTextBlock" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>
    <Style x:Key="SpecialityTextBlock" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>

    <Style x:Key="TextBlockPacientName" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="TextBlockPacientSurname" TargetType="TextBlock">
        <Setter Property="Margin" Value="5,0,5,0"/>
    </Style>

    <Style x:Key="TextBlockPacientLastName" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>

    <Style x:Key="TextBlockPacientBirthday" TargetType="TextBlock">
        <Setter Property="Margin" Value="5,0,0,0"/>
    </Style>

    <Style x:Key="PriemTextBlock" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="PacientTextBlock" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="NamePAcient" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="SurnamePAcient" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="LastNamePAcient" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,20,0"/>
    </Style>

    <Style x:Key="PhoneTextBlock" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="AppoitmentsStoryTextBlock" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <Style x:Key="Data" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="Data2" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,15,0"/>
    </Style>

    <Style x:Key="Diagnosis" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="DiagnosisTextBlock" TargetType="TextBlock">
        <Setter Property="Width" Value="200"/>
    </Style>

    <Style x:Key="Recomendations" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="Recomendations2" TargetType="TextBlock">
        <Setter Property="Width" Value="300"/>
    </Style>

    <Style x:Key="Diagnosis2" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

</ResourceDictionary>