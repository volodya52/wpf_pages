<Page x:Class="WPF_2.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_2.Pages"
       xmlns:validators="clr-namespace:WPF_2.Validators"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="970"
      Title="Registration">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Style="{DynamicResource DoctorStackPanelLabel}">
            <Label Content="Имя" Style="{DynamicResource PacientsLabels}"/>
            <Label Content="Фамилия" Style="{DynamicResource PacientsLabels}"/>
            <Label Content="Отчество" Style="{DynamicResource PacientsLabels}"/>
            <Label Content="Специальность" Style="{DynamicResource PacientsLabels}"/>
            <Label Content="Пароль" Style="{DynamicResource PacientsLabels}"/>
        </StackPanel>

        <StackPanel Style="{DynamicResource DoctorStackPanelTextBox}" Grid.Column="1">
            <TextBox x:Name="NameTextBox">
                <TextBox.Text>
                    <Binding Path="DoctorName" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <validators:RequiredRule/>
                            <validators:LettersRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl ItemsSource="{Binding ElementName=NameTextBox, Path=(Validation.Errors)}" 
                 Style="{DynamicResource Errors}" Height="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBox x:Name="SurnameTextBox">
                <TextBox.Text>
                    <Binding Path="DoctorSurname" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <validators:RequiredRule/>
                            <validators:LettersRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl ItemsSource="{Binding ElementName=SurnameTextBox, Path=(Validation.Errors)}" 
                   Style="{DynamicResource Errors}" Height="19">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" Foreground="Red" FontSize="11" Margin="2,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBox x:Name="LastNameTextBox">
                <TextBox.Text>
                    <Binding Path="DoctorLastName" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <validators:RequiredRule/>
                            <validators:LettersRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl ItemsSource="{Binding ElementName=LastNameTextBox, Path=(Validation.Errors)}" 
                  Style="{DynamicResource Errors}" Height="19">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" Foreground="Red" FontSize="11" Margin="2,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBox x:Name="SpecialityTextBox">
                <TextBox.Text>
                    <Binding Path="DoctorSpeciality" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <validators:RequiredRule/>
                            <validators:LettersRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl ItemsSource="{Binding ElementName=SpecialityTextBox, Path=(Validation.Errors)}" 
                  Style="{DynamicResource Errors}" Height="37">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" Foreground="Red" FontSize="11" Margin="2,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBox x:Name="PasswordTextBox">
                <TextBox.Text>
                    <Binding Path="DoctorPassword" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <validators:RequiredRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl ItemsSource="{Binding ElementName=PasswordTextBox, Path=(Validation.Errors)}" 
                  Style="{DynamicResource Errors}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" Foreground="Red" FontSize="11" Margin="2,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <Button Click="RegistrationButton" Style="{DynamicResource RegistrationButton}">
                Зарегистрироваться
            </Button>
            <Button Click="Button_Click" Style="{DynamicResource SignInButton2}">
                Войти
            </Button>
        </StackPanel>
    </Grid>
</Page>
