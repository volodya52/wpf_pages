<Page x:Class="WPF_2.Pages.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Column="0" Grid.Row="0" Style="{DynamicResource WrapPanelSignIn}">
           
            <Label Content="ID:" Style="{DynamicResource LabelID}"/>
            <TextBox Style="{DynamicResource TextBoxID}" Text="{Binding DoctorId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Пароль:" Style="{DynamicResource LabelPassword}"/>
            <TextBox  Style="{DynamicResource PasswordTextBox}" Text="{Binding DoctorPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Click="SignIn" Content="Войти" Style="{DynamicResource SignInButton}"/>
        </WrapPanel>


    </Grid>
</Page>
