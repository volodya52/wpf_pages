<Page x:Class="WPF_2.Pages.AddPacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPacient">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Style="{DynamicResource PacientStackPanelLabel}">
            <Label Content="Имя пациента"/>
            <Label Content="Фамилия пациента"/>
            <Label Content="Отчество пациента"/>
            <Label Content="Дата рождения"/>
            <Label Content="Номер телефона"/>
        </StackPanel>
        <StackPanel Style="{DynamicResource PacientStackPanelTextBox}" Grid.Column="1">
            <TextBox Text="{Binding PacientName}"/>
            <TextBox Text="{Binding PacientSurname}"/>
            <TextBox Text="{Binding PacientLastName}"/>
            <TextBox Text="{Binding PacientBirthday}"/>
            <TextBox Text="{Binding PacientPhoneNumber}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <Button Content="Сохранить"  Click="ButtonAddPacient" Style="{DynamicResource AddPAcientButton}"/>
            <Button Content="Назад"  Click="BackButton" Style="{DynamicResource BAckButton3}"/>
        </StackPanel>
    </Grid>
</Page>
